<div class='container'>
  <h2 class='profileTitle mt-10'>Dashboard</h2>

  {{! status projects  }}
  <div class='container'>
    <div class='row'>
      <div class='col-md-6 sm-12'>
        <h2 class='mt-5 text-gray-500 mb-5'>Global Stats</h2>
        <div class='grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4 globalStatus'>
          <div
            class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
          >
            <div
              class='p-3 mr-4 text-orange-500 bg-orange-100 rounded-full dark:text-orange-100 dark:bg-orange-500'
            >
              <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
                <path
                  d='M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z'
                ></path>
              </svg>
            </div>
            <div>
              <p
                class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
              >
                Total Projects
              </p>
              <p
                class='text-lg font-semibold text-gray-700 dark:text-gray-200'
              >{{totalProjects}}</p>
            </div>
          </div>

          <div
            class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
          >
            <div
              class='p-3 mr-4 text-green-500 bg-green-100 rounded-full dark:text-green-100 dark:bg-green-500'
            >
              <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
                <path
                  fill-rule='evenodd'
                  d='M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z'
                  clip-rule='evenodd'
                ></path>
              </svg>
            </div>
            <div>
              <p
                class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
              >
                Projects budget
              </p>
              <p class='text-lg font-semibold text-gray-700 dark:text-gray-200'>
                {{totalBudget}}
              </p>
            </div>
          </div>

          <div
            class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
          >
            <div
              class='p-3 mr-4 text-blue-500 bg-blue-100 rounded-full dark:text-blue-100 dark:bg-blue-500'
            >
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-6 w-6'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
                stroke-width='2'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9'
                ></path>
              </svg>
            </div>
            <div>
              <p
                class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
              >
                In progress
              </p>
              <p
                class='text-lg font-semibold text-gray-700 dark:text-gray-200'
              >{{totalInprogress}}</p>
            </div>
          </div>

          <div
            class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
          >
            <div
              class='p-3 mr-4 text-teal-500 bg-red-100 rounded-full dark:text-teal-100 dark:bg-teal-500'
            >
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-6 w-6'
                fill='none'
                viewBox='0 0 24 24'
                stroke='red'
                stroke-width='2'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
                ></path>
              </svg>
            </div>
            <div>
              <p
                class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
              >
                Done
              </p>
              <p
                id='totalDone'
                class='text-lg font-semibold text-gray-700 dark:text-gray-200'
              >{{totalDone}}</p>
            </div>
          </div>
        </div>
      </div>

      {{! my stats }}
      <div class='col-md-6 sm-12'>
        <h2 class='mt-5 text-gray-500 mb-5'>
          My Stats
        </h2>
        <div class=''>
          <div class='myStatus grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4'>
            <div
              class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
            >
              <div
                class='p-3 mr-4 text-orange-500 bg-orange-100 rounded-full dark:text-orange-100 dark:bg-orange-500'
              >
                <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
                  <path
                    d='M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z'
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
                >
                  Total Projects
                </p>
                <p
                  class='text-lg font-semibold text-gray-700 dark:text-gray-200'
                >{{myTotalProjects}}</p>
              </div>
            </div>

            <div
              class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
            >
              <div
                class='p-3 mr-4 text-green-500 bg-green-100 rounded-full dark:text-green-100 dark:bg-green-500'
              >
                <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
                  <path
                    fill-rule='evenodd'
                    d='M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z'
                    clip-rule='evenodd'
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
                >
                  Projects budget
                </p>
                <p
                  class='text-lg font-semibold text-gray-700 dark:text-gray-200'
                >
                  {{myTotalBudget}}
                </p>
              </div>
            </div>

            <div
              class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
            >
              <div
                class='p-3 mr-4 text-blue-500 bg-blue-100 rounded-full dark:text-blue-100 dark:bg-blue-500'
              >
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-6 w-6'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                  stroke-width='2'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    d='M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9'
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
                >
                  In progress
                </p>
                <p
                  id='myInProgress'
                  class='text-lg font-semibold text-gray-700 dark:text-gray-200'
                >{{myTotalInprogress}} </p>
              </div>
            </div>

            <div
              class='flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800'
            >
              <div
                class='p-3 mr-4 text-teal-500 bg-red-100 rounded-full dark:text-teal-100 dark:bg-teal-500'
              >
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-6 w-6'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='red'
                  stroke-width='2'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    d='M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class='mb-2 text-sm font-medium text-gray-600 dark:text-gray-400'
                >
                  Done
                </p>
                <p
                  id='myDone'
                  class='text-lg font-semibold text-gray-700 dark:text-gray-200'
                >{{myTotalDone}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! chartStatus data extraction }}

  <!-- Chart pie -->
  <!-- Required chart.js -->
  <div class='row'>
    <div class='col-md-6 sm-12'>
      <div class='py-3 px-5 bg-gray-50 text-gray-500 mb-5 text-center'>Global
        Status</div>
      <canvas class='p-10' id='chartStatus'></canvas>
    </div>
    <div class='col-md-6 sm-12'>
      <p class='py-3 px-5 bg-gray-50 text-gray-500 mb-5 text-center'>My Status</p>
      <canvas class='p-10' id='chartStatus2'></canvas></div>
  </div>

  <div class='hidden'>
    <p id='totalInProgress'>{{totalInprogress}}</p>
    <p id='totalEarly'>{{totalEarlyStages}}</p>
    <p id='totalBlocked'>{{totalBlocked}}</p>
    <p id='myTotalEarly'>{{myTotalEarlyStages}}</p>
    <p id='myTotalBlocked'>{{myTotalBlocked}}</p>

  </div>

  <script src='/js/dashboard.js'></script>

</div>